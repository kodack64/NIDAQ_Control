<Window x:Class="WpfTest.EditDivisionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Division" Height="250" Width="400"
        Background="LightGray">
    <StackPanel Orientation="Vertical" Margin="30">
        <StackPanel Orientation="Horizontal" Margin="15">
            <Label Content="Length" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="Text_TimeValue"  Text="0" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
            <ComboBox Name="Combo_TimeUnit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Margin="10,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="15">
            <Button Name="Button_OK"  Content="OK" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="Click_OK"/>
            <Button Name="Button_Cancel" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="Click_Cancel"/>
        </StackPanel>
    </StackPanel>
</Window>
