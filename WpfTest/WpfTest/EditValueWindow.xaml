<Window x:Class="WpfTest.EditValueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditValue" Height="300" Width="300"
        Background="LightGray">
    <StackPanel Orientation="Vertical" Margin="30">
        <StackPanel Orientation="Horizontal" Margin="15">
            <Label Content="Value" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="VoltageValue"  Text="0" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="15">
            <Label Content="NodeType" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ComboBox Name="NodeType" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="15">
            <Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
            <Button Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        </StackPanel>
    </StackPanel>
</Window>
